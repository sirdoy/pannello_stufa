# Firebase Configuration (Client SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Firebase Cloud Messaging (Push Notifications)
# Genera VAPID key: Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key-here

# Firebase Admin SDK (Server-side push notifications)
# Scarica da: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Auth0 Configuration
AUTH0_SECRET=use-openssl-rand-hex-32-to-generate
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Netatmo Configuration
# ==========================================
# You need TWO Netatmo apps registered at https://dev.netatmo.com/apps/
# Same variable NAMES, different VALUES per environment
# Localhost: values from .env.local | Production: values from Vercel
# See docs/setup/netatmo-setup.md for detailed setup instructions

# Localhost (.env.local) - use development Netatmo app credentials
NEXT_PUBLIC_NETATMO_CLIENT_ID=your-netatmo-dev-client-id
NETATMO_CLIENT_SECRET=your-netatmo-dev-client-secret
NEXT_PUBLIC_NETATMO_REDIRECT_URI=http://localhost:3001/api/netatmo/callback

# Production (Vercel Environment Variables) - use production Netatmo app credentials
# NEXT_PUBLIC_NETATMO_CLIENT_ID=your-netatmo-prod-client-id
# NETATMO_CLIENT_SECRET=your-netatmo-prod-client-secret
# NEXT_PUBLIC_NETATMO_REDIRECT_URI=https://your-app.vercel.app/api/netatmo/callback

# Philips Hue Remote API (OAuth 2.0) - Optional for cloud access
# Register app at: https://developers.meethue.com/my-apps/
# Required only if you want remote access (outside local network)
NEXT_PUBLIC_HUE_APP_ID=your-hue-app-id
NEXT_PUBLIC_HUE_CLIENT_ID=your-hue-client-id
HUE_CLIENT_SECRET=your-hue-client-secret

# Scheduler Cron Secret (for /api/scheduler/check and /api/notifications/cleanup)
# Generate with: openssl rand -hex 32
CRON_SECRET=your-cron-secret-here

# Admin Secret (for /api/admin/* endpoints)
# Generate: openssl rand -hex 32
ADMIN_SECRET=your-admin-secret-here

# Admin User ID for scheduler notifications
# Ottieni da Auth0 user.sub (es: auth0|xxx)
ADMIN_USER_ID=your-auth0-user-id

# Environment
NODE_ENV=development
